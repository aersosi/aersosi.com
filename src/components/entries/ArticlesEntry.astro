---
import EntryWrapper from "./EntryWrapper.astro";

const { url, viewerTitle, pageDescription, pubDate } = {
  url: "/articles/" + Astro.props.post.slug,
  viewerTitle: Astro.props.post.data.viewerTitle,
  pageDescription: Astro.props.post.data.pageDescription,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("de-DE", {
    year: "numeric",
    month: "2-digit",
    day: "2-digit",
  }),
};

const date = new Date(Astro.props.post.data.pubDate).toISOString();
---

<EntryWrapper url={url} viewerTitle={viewerTitle} pageDescription={pageDescription}>
  Ver√∂ffentlicht am <time datetime={date}>{pubDate}</time>
</EntryWrapper>
