---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/lib/elements/Text.astro";
import Wrapper from "@/components/lib/containers/Wrapper.astro";
import BlogEntry from "../components/lib/entries/BlogEntry.astro";
const {frontmatter} = Astro.props;
import { getCollection } from "astro:content";
import GoBack from "@/components/lib/elements/GoBack.astro";
const allPosts = await getCollection("articles");
const relatedPosts = allPosts.filter((post) =>
    post.data.tags.some((tag) => frontmatter.tags.includes(tag)) &&
    post.data.title !== frontmatter.title
);
---

<BaseLayout>
    <section>
        <Wrapper variant="standard">
            <div class="grid grid-cols-1 gap-x-12 gap-y-8 lg:grid-cols-3 py-16 lg:py-24 lg:pt-40">
                <div class="lg:sticky lg:top-16 lg:z-40 self-start">
                    <div class="flex gap-8 flex-col">
                        <GoBack/>

                        <Text tag="h1" variant="textXL" class="font-medium text-base-900 dark:text-white">
                            {frontmatter.title}
                        </Text>
                        <Text tag="p" variant="textSM" class="text-base-600 dark:text-base-300">
                            {frontmatter.description}
                        </Text>
                        <slot name="extra"/>
                    </div>
                </div>
                <div class="lg:col-span-2">

                    <Wrapper variant="prose">
                        <Image
                                width={1000}
                                height={800}
                                loading="eager"
                                decoding="async"
                                alt={frontmatter.image.alt}
                                src={frontmatter.image.url}
                                class="object-cover object-center w-full aspect-12/6 lg:col-span-2 rounded-xl"
                        />
                        <slot/>
                    </Wrapper>
                </div>
            </div>
        </Wrapper>
    </section>
    {
        relatedPosts.length > 0 && (
                    <section>
                        <Wrapper variant="standard">
                            <div class="grid grid-cols-1 gap-x-12 gap-y-8 lg:gap-4 lg:grid-cols-3 py-16 lg:py-24">
                                <Text tag="h2"
                                      variant="textBase"
                                      class="font-medium text-base-900 dark:text-white"
                                >
                                    Ã„hnliche Artikel
                                </Text>
                                <div class="flex flex-col gap-12 lg:col-span-2">
                                    {relatedPosts.slice(0, 3).map((post) => (
                                            <BlogEntry post={post}/>
                                    ))}
                                </div>
                            </div>
                        </Wrapper>
                    </section>
        )
    }
</BaseLayout>
