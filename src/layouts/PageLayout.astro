---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/lib/elements/Text.astro";
import Wrapper from "@/components/lib/containers/Wrapper.astro";
import { stackGrid, stackGridPadding, stickyElement } from "@/shared/classes";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.pageTitle} pageDescription={frontmatter.pageDescription}>
	<section>
		<Wrapper variant="standard">
			<!--About Me-->
			<div class:list={[...stackGrid, ...stackGridPadding]}>
				<div class:list={[...stickyElement]}>
					<div class="flex flex-col gap-8">
						<Text tag="h1" variant="text2XL" class="text-base-900 font-medium dark:text-white">
							{frontmatter.viewerTitle}
						</Text>
						<Text tag="p" variant="textBase" class="text-base-600 dark:text-base-300">
							{frontmatter.viewerDescription}
						</Text>
						<slot name="intro" />
					</div>
				</div>
				<div class="lg:col-span-2">
					<Wrapper variant="prose">
						<Image
							width={1000}
							height={800}
							loading="eager"
							decoding="async"
							alt={frontmatter.image.alt}
							src={frontmatter.image.url}
							class="aspect-12/6 w-full rounded-xl object-cover object-center lg:col-span-2"
						/>
						<slot />
					</Wrapper>
				</div>
			</div>
		</Wrapper>
	</section>
</BaseLayout>
