---
import "./CodeBlock.scss"

interface Props {
    title: string;
    body: string;
}

const { title, body} = Astro.props;
---

<div class="cli-card">
    <div class="head">
        <div class="navigation">
            <div class="circle red"></div>
            <div class="circle yellow"></div>
            <div class="circle green"></div>
        </div>
        <h2 class="title">
            {title}
        </h2>
    </div>
    <div class="body">
        <pre class="opacity-20 pb-4"><code class="font-mono-400">My CV in your CLI</code></pre>
        <pre><code class="npx font-mono-400">{body}</code></pre>
    </div>
</div>
