---
const { size, strokeWidth = "1.75", class: className, ...rest } = Astro.props;
const xs = ["size-4"];
const sm = ["size-4.5"];
const base = ["size-5"];
const lg = ["size-5.5"];
const xl = ["size-6"];
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={[
    "icon",
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "lg" && lg,
    size === "xl" && xl,
    className,
  ]}
  {...rest}
>
  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
  <path
    d="M17 3.34a10 10 0 1 1 -15 8.66l.005 -.324a10 10 0 0 1 14.995 -8.336m-9 1.732a8 8 0 0 0 4.001 14.928l-.001 -16a8 8 0 0 0 -4 1.072"
  >
  </path>
</svg>
