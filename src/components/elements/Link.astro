---
const { variant, size, class: className, ...rest } = Astro.props;

const defaultClass = [
  // light
  "text-base-900",
  "hover:text-base-500",
  // dark
  "dark:text-base-50",
  "dark:hover:text-base-400",
];

const primaryClass = [
  // light
  "text-primary-600",
  "hover:text-primary-400",
  // dark
  "dark:text-primary-300",
  "dark:hover:text-primary-100",
];

const secondaryClass = [
  // light
  "text-secondary-400",
  "hover:text-secondary-500",
  // dark
  "dark:text-secondary-300",
  "dark:hover:text-secondary-100",
];

const mutedClass = [
  // light
  "text-base-500",
  "hover:text-base-700",
  // dark
  "dark:text-base-400",
  "dark:hover:text-base-200",
];

// Size
const sizes = {
  xs: ["gap-1.25", "text-xs", "xl:text-sm", "2xl:text-base"],
  sm: ["gap-1.25", "text-sm", "xl:text-base", "2xl:text-lg"],
  base: ["gap-1.5", "text-base", "xl:text-lg", "2xl:text-xl"],
  lg: ["gap-1.75", "text-lg", "xl:text-xl", "2xl:text-2xl"],
  xl: ["gap-1.75", "text-xl", "xl:text-2xl", "2xl:text-3xl"],
};

const variantClass = {
  default: defaultClass,
  primary: primaryClass,
  secondary: secondaryClass,
  muted: mutedClass,
  none: [],
};

const sizeClass = sizes[size] || [];

const additionalClasses = className ? className.split(" ") : [];
const baseClass = [
  "flex",
  "w-fit",
  "items-center",
  "font-medium",
  "rounded-sm",
  "transition-colors",
  "duration-200",
];
---

{
  (
    <a
      href={rest.href}
      class:list={[
        ...baseClass,
        ...(variantClass[variant] || []),
        ...sizeClass,
        ...additionalClasses,
      ]}
      {...rest}
    >
      <slot />
    </a>
  )
}
