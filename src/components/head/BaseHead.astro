---
import Seo from "./Seo.astro";
import Meta from "./Meta.astro";
import Fonts from "./Fonts.astro";
import Favicons from "./Favicons.astro";
import ToggleLocalStorage from "@/lib/scripts/ToggleLocalStorage.astro";
import ToggleA11ytip from "@/lib/scripts/ToggleA11ytip.astro";
import UpdateYear from "@/lib/scripts/UpdateYear.astro";
import UpdateClock from "@/lib/scripts/UpdateClock.astro";
import ToggleNavActive from "@/lib/scripts/MainNav/ToggleNavActive.astro";
import UpdateTheme from "@/lib/scripts/UpdateTheme.astro";
import UpdateZoom from "@/lib/scripts/UpdateZoom.astro";
import ToggleMobileSidenav from "@/lib/scripts/MainNav/ToggleMobileSidenav.astro";
import ToTopMobileNav from "@/lib/scripts/MainNav/ToTopMobileNav.astro";

import ReadingProgressBar from "@/lib/scripts/MainNav/ReadingProgressBar.astro";
import ShrinkMainnav from "@/lib/scripts/MainNav/ShrinkMainnav.astro";
import PreventBodyHeightJump from "@/lib/scripts/MainNav/PreventBodyHeightJump.astro";

export interface Props {
  pageTitle?: string;
  pageDescription?: string;
  image?: string;
  article?: boolean;
  publishDate?: Date;
  modifiedDate?: Date;
  author?: string;
}

const { pageTitle, pageDescription, image, article, publishDate, modifiedDate, author } = Astro.props;
---

<Fonts />
<Seo
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  image={image}
  article={article}
  publishDate={publishDate}
  modifiedDate={modifiedDate}
  author={author}
/>
<Meta />
<Favicons />

<!-- scripts -->
<PreventBodyHeightJump />
<ReadingProgressBar />
<ShrinkMainnav />
<ToggleLocalStorage />
<ToggleA11ytip />
<UpdateYear />
<UpdateClock />
<ToggleNavActive />
<UpdateTheme />
<UpdateZoom />
<ToggleMobileSidenav />
<ToTopMobileNav />
