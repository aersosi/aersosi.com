---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/lib/elements/Text.astro";
import Wrapper from "@/components/lib/containers/Wrapper.astro";
const {frontmatter} = Astro.props;
---

<BaseLayout>
    <section>
        <Wrapper variant="standard">

            <!--About Me-->
            <div class="grid grid-cols-1 gap-x-12 gap-y-8 lg:grid-cols-3 py-16 lg:py-24 lg:pt-40">
                <div class="lg:sticky lg:top-4 lg:z-40 self-start">
                    <div class="flex gap-8 flex-col">
                        <Text tag="h1" variant="text2XL" class="font-medium text-base-900 dark:text-white">
                            {frontmatter.title}
                        </Text>
                        <Text tag="p" variant="textBase" class="text-base-600 dark:text-base-300">
                            {frontmatter.description}
                        </Text>
                        <slot name="intro"/>
                    </div>
                </div>
                <div class="lg:col-span-2">

                    <Wrapper variant="prose">
                        <Image
                                width={1000}
                                height={800}
                                loading="eager"
                                decoding="async"
                                alt={frontmatter.image.alt}
                                src={frontmatter.image.url}
                                class="object-cover object-center w-full aspect-12/6 lg:col-span-2 rounded-xl"
                        />
                        <slot/>
                    </Wrapper>
                </div>
            </div>
        </Wrapper>
    </section>
</BaseLayout>
