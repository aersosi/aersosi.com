            </div>
          </div>
        </div>

        <!-- Outline -->
        <div class="grid grid-cols-2 gap-8 md:grid-cols-2">
          <div class="w-full">
            <Text tag="p" variant="textSM" class="text-base-900 font-medium uppercase dark:text-white">
              Outline text
            </Text>
            <div class="mt-4 flex flex-col gap-4">
              <Button size="xxs" variant="outline">Outline XXS</Button>
              <Button size="xs" variant="outline">Outline XS</Button>
              <Button size="sm" variant="outline">Outline SM</Button>
              <Button size="base" variant="outline">Outline Base</Button>
              <Button size="lg" variant="outline">Outline LG</Button>
              <Button size="xl" variant="outline">Outline XL</Button>
            </div>
          </div>
          <div>
            <Text tag="p" variant="textSM" class="text-base-900 font-medium uppercase dark:text-white"> Icon </Text>
            <div class="mt-4 flex flex-col gap-4">
              <Button isLink={true} href="#" size="xxs" variant="outline" iconOnly>
                <User slot="icon" size="xs" />
              </Button>

              <Button isLink={true} href="#" size="xs" variant="outline" iconOnly>
                <User slot="icon" size="xs" />
              </Button>

              <Button isLink={true} href="#" size="sm" variant="outline" iconOnly>
                <User slot="icon" size="sm" />
              </Button>

              <Button isLink={true} href="#" size="base" variant="outline" iconOnly>
