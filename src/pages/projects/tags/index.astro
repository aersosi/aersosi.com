---
// Assets
import { Image } from "astro:assets";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/lib/elements/Text.astro";
import Wrapper from "@/components/lib/containers/Wrapper.astro";
// Content
import { getCollection } from "astro:content";
import GoBack from "@/components/lib/elements/GoBack.astro";
import Link from "@/components/lib/elements/Link.astro";
// Get all projects
const allProjects = await getCollection("projects")
// Extract tags from all projects and count occurrences
const tagCounts = allProjects.reduce((acc, post) => {
    post.data.tags.forEach((tag) => {
        acc[tag] = (acc[tag] || 0) + 1; // Count each tag per post
    });
    return acc;
}, {});
// Extract unique tags for display
const tags = Object.keys(tagCounts);
// Function to get the image for a specific tag
function getTagImage(tag) {
    const filteredProjects = allProjects.filter((post) => post.data.tags.includes(tag));
    if (filteredProjects.length > 0) {
        return filteredProjects[0].data.image.url; // Return the image of the first post with that tag
    }
}
---

<BaseLayout>
    <section>
        <Wrapper variant="standard">
            <div class="grid grid-cols-1 gap-x-12 gap-y-8 lg:grid-cols-3 py-16 lg:py-24 lg:pt-40">
                <div class="lg:sticky lg:top-16 lg:z-40 self-start">
                    <div class="flex gap-8 flex-col">
                        <GoBack/>

                        <Text tag="h1" variant="textXL" class="font-medium text-base-900 dark:text-white">
                            Kategorie Index
                        </Text>
                    </div>
                </div>

                <div class="flex flex-col gap-2 lg:col-span-2">
                    {tags.map((tag) => (
                            <Link title={tag} aria-label={tag} href={`/projects/tags/${tag}`} size="sm"
                                  variant="accent">
                                <span>{tagCounts[tag]}</span>
                                <span>{tag}</span>
                            </Link>
                    ))}
                </div>
            </div>
        </Wrapper>
    </section>
</BaseLayout>
