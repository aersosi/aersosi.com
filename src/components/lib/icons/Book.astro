---
const {size, strokeWidth = "2.125", class: className, ...rest} = Astro.props;
const xs = ["size-4"];
const sm = ["size-4.5"];
const base = ["size-5"];
const lg = ["size-5.5"];
const xl = ["size-6"];
---
<svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width={strokeWidth}
        stroke-linecap="round"
        stroke-linejoin="round"
        class:list={[
            "icon",
            size === "xs" && xs,
            size === "sm" && sm,
            size === "base" && base,
            size === "lg" && lg,
            size === "xl" && xl,
            className,
        ]}
        {...rest}
>
