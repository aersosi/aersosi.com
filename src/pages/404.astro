---
// Fundation
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import GoBack from "../components/assets/GoBack.astro";
import ArrowLeft from "../components/fundations/icons/ArrowLeft.astro";
---

<BaseLayout>
    <section>
        <Wrapper variant="standard">
            <div
                    class="grid grid-cols-1 gap-x-12 gap-y-8 lg:grid-cols-3 py-24 lg:pt-40"
            >
                <div>

                    <div class="flex gap-8 flex-col">
                        <Link href="/" size="sm" variant="accent">
                            <ArrowLeft size="sm"/>
                            Go back home
                        </Link>
                        <div class="flex flex-col">
                            <Text tag="h1" variant="textLG" class="font-medium text-base-900 dark:text-white">
                                404 — Not Found
                            </Text>
                            <Text
                                    tag="p"
                                    variant="textBase"
                                    class="text-base-600 dark:text-base-300"
                            >
                                If you’re lost, you’re not alone.
                            </Text>
                        </div>
                    </div>

                </div>
                <div class="lg:col-span-2 flex flex-col">
                    <Text tag="p" variant="textBase" class="text-base-600 dark:text-base-300">
                        This page doesn’t exist, never did, or was removed while debugging
                        something else. Try going back or check if you typo’d your way into
                        oblivion. If you’re lost, you’re not alone.
                    </Text>
                </div>
            </div>
        </Wrapper>
    </section>
</BaseLayout>
