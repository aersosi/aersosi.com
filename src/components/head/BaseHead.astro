---
import Seo from "./Seo.astro";
import Meta from "./Meta.astro";
import Fonts from "./Fonts.astro";
import Favicons from "./Favicons.astro";
import ToggleLocalStorage from "@/components/lib/scripts/ToggleLocalStorage.astro";
import ToggleA11ytip from "@/components/lib/scripts/ToggleA11ytip.astro";
import UpdateYear from "@/components/lib/scripts/UpdateYear.astro";
import UpdateClock from "@/components/lib/scripts/UpdateClock.astro";
import ToggleNavActive from "@/components/lib/scripts/MainNav/ToggleNavActive.astro";
import UpdateTheme from "@/components/lib/scripts/UpdateTheme.astro";
import MoveMainnav from "@/components/lib/scripts/MainNav/MoveMainnav.astro";
import ToggleMobileNav from "@/components/lib/scripts/MainNav/ToggleMobileNav.astro";
import ToTopMobileNav from "@/components/lib/scripts/MainNav/ToTopMobileNav.astro";

export interface Props {
	pageTitle?: string;
	pageDescription?: string;
	image?: string;
	article?: boolean;
	publishDate?: Date;
	modifiedDate?: Date;
	author?: string;
}

const {
	pageTitle = "",
	pageDescription = "",
	image,
	article,
	publishDate,
	modifiedDate,
	author,
} = Astro.props;
---

<Fonts />
<Seo
	pageTitle={pageTitle}
	pageDescription={pageDescription}
	image={image}
	article={article}
	publishDate={publishDate}
	modifiedDate={modifiedDate}
	author={author}
/>
<Meta />
<Favicons />

<!-- scripts -->
<ToggleLocalStorage />
<ToggleA11ytip />
<UpdateYear />
<UpdateClock />
<ToggleNavActive />
<MoveMainnav />
<UpdateTheme />
<ToggleMobileNav />
<ToTopMobileNav />
