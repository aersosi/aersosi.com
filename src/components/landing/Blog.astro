---
// Fundations

import Text from "@/components/lib/elements/Text.astro";
import Wrapper from "@/components/lib/containers/Wrapper.astro";
// Component
import BlogEntry from "@/components/blog/BlogEntry.astro";
// Content
import { getCollection } from "astro:content";
import Link from "@/components/lib/elements/Link.astro";
import ArrowRight from "@/components/lib/icons/ArrowRight.astro";

const allPostsUnsorted = await getCollection("posts");
const allPosts = allPostsUnsorted.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-x-12 gap-y-8 lg:grid-cols-3 py-24 border-b border-base-400 dark:border-base-600"
    >
      <div class="lg:sticky lg:top-16 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textBase"
          class="font-medium text-base-900 dark:text-white pb-2"
        >
          Neueste Artikel
        </Text>
        <Link href="/blog" size="sm" variant="accent">
          Alle Artikel
          <ArrowRight size="sm"/>
        </Link>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {allPosts.slice(0, 3).map((post) => <BlogEntry post={post} />)}
      </div>
    </div>
  </Wrapper>
</section>
