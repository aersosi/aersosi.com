---
import ToggleButton from "./ToggleButton.astro";
import Contrast from "@/lib/icons/Contrast.astro";
const { isSidenav } = Astro.props;
---

<ToggleButton
  id="theme-toggle"
  toggleSelector="dark"
  sideVariantOff="outline"
  sideVariantOn="outlinePrimary"
  mainVariantOff="outline"
  mainVariantOn="outlinePrimary"
  ariaLabelOn="Heller Modus"
  ariaLabelOff="Dunkler Modus"
  textOn="Hell"
  textOff="Dunkel"
  IconOn={Contrast}
  IconOff={Contrast}
  isSidenav={isSidenav}
/>
