---
// Fundations
import Text from "@/components/lib/elements/Text.astro";
import Wrapper from "@/components/lib/containers/Wrapper.astro";
import { getCollection } from "astro:content";
import ProjectEntry from "../lib/entries/ProjectEntry.astro";
import Link from "@/components/lib/elements/Link.astro";
import ArrowRight from "@/components/lib/icons/ArrowRight.astro";

const allProjectsUnsorted = await getCollection("projects");
const allProjects = allProjectsUnsorted.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
---

<section>
    <Wrapper variant="standard">
        <div class="grid grid-cols-1 gap-x-12 gap-y-8 lg:grid-cols-3 py-16 lg:py-24 border-b border-base-400 dark:border-base-600">
            <div class="lg:sticky lg:top-16 lg:z-40 self-start">
                <Text tag="h2" variant="textBase" class="font-medium text-base-900 dark:text-white pb-2">
                    Neuste Projekte
                </Text>
                <Link href="/projects" size="sm" variant="accent">
                    Alle Projekte
                    <ArrowRight size="sm"/>
                </Link>
            </div>
            <div class="lg:col-span-2 flex flex-col gap-8">
                {allProjects.slice(0, 3).map((project) =>
                        <ProjectEntry project={project}/>)}
            </div>
        </div>
    </Wrapper>
</section>
