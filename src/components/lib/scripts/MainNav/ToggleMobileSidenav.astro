<script>
	const ToggleMobileSidenav = () => {
		const mobileNav = document.getElementById("mobileNav");
		const backdrop = document.getElementById("backdrop");

		if (mobileNav) {
			mobileNav.classList.toggle("translate-x-0");
			mobileNav.classList.toggle("translate-x-full");
		}

		if (backdrop) {
			backdrop.classList.toggle("hidden");
		}

		document.body.classList.toggle("overflow-hidden");
	};
	document.getElementById("mobileNavBtn")?.addEventListener("click", ToggleMobileSidenav);
	document.getElementById("closeMobileNavBtn")?.addEventListener("click", ToggleMobileSidenav);
	document.getElementById("backdrop")?.addEventListener("click", ToggleMobileSidenav);
</script>
