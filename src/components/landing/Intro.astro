---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { Image } from 'astro:assets';
import Link from "../fundations/elements/Link.astro";
import ArrowRight from "../fundations/icons/ArrowRight.astro";
---

<section>
    <Wrapper variant="standard">
        <div id="home"
             class="grid grid-cols-1 gap-x-12 gap-y-8 lg:grid-cols-3 pb-24 pt-24 lg:pt-16 border-b border-base-400 dark:border-base-600"
        >
            <div class="lg:sticky lg:top-16 lg:z-40 self-start">
                <div class="flex flex-col-reverse sm:flex-row gap-x-12 gap-y-8 sm:items-end">
                    <div class="flex lg:hidden flex-col shrink-0  sm:text-end">
                        <Text tag="h1" variant="textLG"
                              class="font-medium text-accent-700 dark:text-accent-400 whitespace-nowrap">
                            Arthur Ersosi
                        </Text>
                        <Text tag="p" variant="textLG" class="text-base-900 dark:text-white whitespace-nowrap">
                            Design Engineer
                        </Text>
                    </div>
                    <span>
                        <Image title="Portrait Arthur Ersosi"
                               width={800}
                               height={800}
                               loading="eager"
                               decoding="async"
                               alt="Portrait Arthur Ersosi"
                               src="/src/images/portrait.webp"
                               class="aspect-12/10 lg:aspect-square object-cover object-center rounded-xl"
                        />
                    </span>
                </div>

            </div>
            <div class="flex flex-col justify-between gap-6 lg:col-span-2">
                <div class="hidden lg:flex flex-col">
                    <Text tag="h1" variant="textLG" class="font-medium text-accent-700 dark:text-accent-400">
                        Arthur Ersosi
                    </Text>
                    <Text tag="p" variant="textBase" class="text-base-900 dark:text-white">
                        Design Engineer
                    </Text>
                </div>
                <Text tag="p" variant="textBase" class="text-base-600 dark:text-base-300">
                    Iâ€™m a self-taught front-end developer and UI designer with a strong
                    passion for building my own projects. My philosophy revolves around
                    simplicity and practicality, focusing on straightforward principles that
                    deliver results. I value sticking to a clear plan and executing it
                    reliably, with consistency being the foundation that keeps everything on
                    track.
                </Text>
                <Link href="/blog/posts/about-me" size="sm" variant="accent">
                    CV & Mehr
                    <ArrowRight size="sm"/>
                </Link>

            </div>
        </div>
    </Wrapper>
</section>
