                            </Button>

                            <Button isLink={true} href="#href" size="xs" variant="secondary" iconOnly>
                                <User slot="icon" size="xs"/>
                            </Button>

                            <Button isLink={true} href="#href" size="sm" variant="secondary" iconOnly>
                                <User slot="icon" size="sm"/>
                            </Button>

                            <Button isLink={true} href="#href" size="base" variant="secondary" iconOnly>
                                <User slot="icon" size="base"/>
                            </Button>

                            <Button isLink={true} href="#href" size="lg" variant="secondary" iconOnly>
                                <User slot="icon" size="lg"/>
                            </Button>

                            <Button isLink={true} href="#href" size="xl" variant="secondary" iconOnly>
                                <User slot="icon" size="xl"/>
                            </Button>
                        </div>
                    </div>
                </div>


                <!-- Accent -->
                <div class="grid grid-cols-2 md:grid-cols-2 gap-8">
                    <div class="w-full">
                        <Text tag="p" variant="textSM" class="font-medium uppercase text-base-900 dark:text-white">
                            Accent text
                        </Text>
                        <div class="flex flex-col mt-4 gap-4">
                            <Button size="xxs" variant="accent">Accent XXS</Button>
                            <Button size="xs" variant="accent">Accent XS</Button>
                            <Button size="sm" variant="accent">Accent SM</Button>
                            <Button size="base" variant="accent">Accent Base</Button>
                            <Button size="lg" variant="accent">Accent LG</Button>
                            <Button size="xl" variant="accent">Accent XL</Button>
                        </div>
                    </div>
                    <div>
                        <Text tag="p" variant="textSM" class="font-medium uppercase text-base-900 dark:text-white">
                            Icon
                        </Text>
                        <div class="flex flex-col mt-4 gap-4">

                            <Button isLink={true} href="#href" size="xxs" variant="accent" iconOnly>
                                <User slot="icon" size="xs"/>
                            </Button>

                            <Button isLink={true} href="#href" size="xs" variant="accent" iconOnly>
                                <User slot="icon" size="xs"/>
