---
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
	title="Dein Seitentitel"
	description="Eine detaillierte Beschreibung deines Seiteninhalts."
	canonical="https://yourwebsite.com/current-page"
	openGraph={{
		url: "https://yourwebsite.com/current-page",
		title: "Dein Seitentitel",
		description: "Eine detaillierte Beschreibung deines Seiteninhalts.",
		images: [
			{
				url: "https://yourwebsite.com/og-image.jpg",
				width: 1200,
				height: 630,
				alt: "Open Graph Bild Beschreibung",
				type: "image/jpeg",
			},
		],
		site_name: "Dein Seitenname",
		type: "website",
		locale: "de_DE",
	}}
	twitter={{
		handle: "@yourhandle",
		site: "@yourwebsite",
		cardType: "summary_large_image",
	}}
/>
