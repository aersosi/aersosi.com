---
// Fundations
import Text from "@/components/lib/elements/Text.astro";
import Wrapper from "@/components/lib/containers/Wrapper.astro";
import Link from "@/components/lib/elements/Link.astro";
import ArrowRight from "@/components/lib/icons/ArrowRight.astro";
import { Image } from 'astro:assets';
import portrait from '/src/images/portrait.webp';
import { stackGrid, stackGridPadding, stickyElement } from "@/shared/classes.js";
---

<section>
    <Wrapper variant="standard">
        <div id="home" class={`${stackGrid} ${stackGridPadding} border-b`}>
            <div class={`${stickyElement}`}>
                <div class="flex flex-col-reverse sm:flex-row gap-x-12 gap-y-6 sm:items-end">
                    <div class="grid lg:hidden shrink-0 text-accent-700 dark:text-accent-300 whitespace-nowrap">
                        <Text tag="h1" variant="text2XL">
                            Arthur Ersosi
                        </Text>
                        <Text tag="p" variant="textLG">
                            Design Engineer
                        </Text>
                    </div>
                    <div>
                        <Image width={800}
                               height={800}
                               loading="eager"
                               decoding="async"
                               alt="Portrait Arthur Ersosi"
                               src={portrait}
                               class="aspect-12/10 lg:aspect-square object-cover object-center rounded-xl"
                        />
                    </div>
                </div>

            </div>
            <div class="grid justify-between gap-8 lg:col-span-2">
                <div class="hidden lg:grid text-accent-700 dark:text-accent-300 whitespace-nowrap">
                    <Text tag="h1" variant="text2XL">
                        Arthur Ersosi
                    </Text>
                    <Text tag="p" variant="textLG">
                        Design Engineer
                    </Text>
                </div>

                <Wrapper variant="prose" class="text-balance">
                    <Text tag="p" class="font-medium text-base-900 dark:text-white">
                        <span id="designYear">10</span>+ Jahre Design Expertise trifft auf<br>
                        <span id="devYear">8</span>+ Jahre modernes Web-Development
                    </Text>
                    <Text tag="p">
                        Moin, ich heiße Arthur (er/ihm) und ich lebe in Hamburg.
                    </Text>
                    <Text tag="p">
                        Als Frontend-Developer und UI/UX-Designer Hybrid habe ich eine unbedingte Leidenschaft
                        für moderne Webanwendungen. Ich liebe es, Probleme zu durchdringen und durch
                        durchdachte Software elegante Lösungen zu finden.
                    </Text>
                    <Text tag="p">
                        Das gelingt durch eine klare Vision und Liebe zum Detail, mit dem Anspruch, exzellente
                        Interfaces, eine harmonische Journey und skalierbare Systeme zu schaffen. Software muss für
                        alle, die sie nutzen, ebenso wertvoll sein wie für jene, die sie entwickeln.
                    </Text>
                </Wrapper>

                <Link href="/about" size="base" variant="accent">
                    Über mich & CV
                    <ArrowRight size="base"/>
                </Link>
            </div>
        </div>
    </Wrapper>
</section>
