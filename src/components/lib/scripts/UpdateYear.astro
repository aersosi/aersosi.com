<script type="module">
    function updateYear() {
        const elements = [
            {
                elName: "designYear",
                StartDate: 2016
            },
            {
                elName: "devYear",
                StartDate: 2018
            }
        ];

        const currentYear = new Date().getFullYear();

        elements.forEach((el) => {
            const yearsPassed = currentYear - el.StartDate;
            const targetEl = document.getElementById(el.elName);
            if (targetEl) {
                targetEl.textContent = yearsPassed;
            }
        });

        document.getElementById("copyrightYear").textContent = new Date().getFullYear();


        const now = new Date();
        const day = now.getDate();
        const month = now.getMonth() + 1;
        const year = now.getFullYear();

        const publishedDate = `${day.toString().padStart(2, '0')}.${month.toString().padStart(2, '0')}.${year}`;
        document.getElementById("publishedDate").textContent = publishedDate;
    }
    updateYear();
</script>