<script>
  const SCROLL_THRESHOLD = 48;

  function updateScrolled(isScrolled) {
    document.documentElement.classList.toggle("scrolled", isScrolled);
    localStorage.setItem("scrolled", isScrolled ? "true" : "false");
  }

  function initializeScrolled() {
    // Aus LocalStorage laden
    const savedScrolled = localStorage.getItem("scrolled");
    const isScrolled = savedScrolled === "true";

    updateScrolled(isScrolled);

    // Falls der gespeicherte Wert nicht passt (z.B. wegen anderer Scroll-Position), live prÃ¼fen
    const isOverThreshold = window.scrollY > SCROLL_THRESHOLD;
    if (isOverThreshold !== isScrolled) {
      updateScrolled(isOverThreshold);
    }
  }

  // Initial laden
  initializeScrolled();

  // Scroll-Event
  window.addEventListener("scroll", () => {
    const isOverThreshold = window.scrollY > SCROLL_THRESHOLD;
    updateScrolled(isOverThreshold);
  });
</script>
