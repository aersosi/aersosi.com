---
import ToggleButton from "./ToggleButton.astro";
import ZoomIn from "@/lib/icons/ZoomIn.astro";
import ZoomOut from "@/lib/icons/ZoomOut.astro";
const { isSidenav } = Astro.props;
---

<ToggleButton
  id="zoom-toggle"
  toggleSelector="zoom"
  sideVariantOff="outline"
  sideVariantOn="default"
  mainVariantOff="outline"
  mainVariantOn="default"
  ariaLabelOn="Verkleinern"
  ariaLabelOff="Vergrößern"
  textOn="Verkleinern"
  textOff="Vergrößern"
  IconOn={ZoomOut}
  IconOff={ZoomIn}
  isSidenav={isSidenav}
/>
