---
import Text from "@/components/elements/Text.astro";

const { url, viewerTitle, pageDescription } = Astro.props;

const textPrimaryHover = "group-hover:text-primary-600 group-hover:dark:text-primary-300";
const hoverSize = "sm:-inset-x-5 sm:-top-2 sm:-bottom-3";
---

<article class="group relative grid gap-x-12 gap-y-8 lg:items-start">
  <a href={url} aria-label={viewerTitle} class="w-full">
    <div
      class={`sm:border border-primary-600 dark:border-primary-300 ${hoverSize} absolute z-0 scale-95 rounded-xl opacity-0 transition group-hover:scale-100 group-hover:opacity-100`}
    >
    </div>
    <div>
      <div class={`absolute ${hoverSize} z-20 rounded-2xl`}></div>
      <div class="relative z-10 flex w-full flex-col gap-x-4 md:flex-row md:items-center">
        <div class="hidden sm:block">
          <Text tag="h3" variant="textLG" class={`transition-colors whitespace-nowrap ${textPrimaryHover}`}>
            {viewerTitle}
            <span class="px-3">â€”</span><slot />
          </Text>
        </div>
        <div class="grid gap-1 pb-1 sm:hidden">
          <Text tag="p" variant="textSM" class={`transition-colors whitespace-nowrap ${textPrimaryHover}`}>
            <slot />
          </Text>

          <Text tag="h3" variant="textLG" class={`transition-colors whitespace-nowrap ${textPrimaryHover}`}>
            {viewerTitle}
          </Text>
        </div>
      </div>
    </div>
    <Text tag="p" class={`transition-colors text-pretty relative z-10 ${textPrimaryHover}`}>
      {pageDescription}
    </Text>
  </a>
</article>
