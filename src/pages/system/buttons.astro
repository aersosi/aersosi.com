---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "../../components/lib/elements/Text.astro";
import Button from "../../components/lib/elements/Button.astro";
import Wrapper from "../../components/lib/containers/Wrapper.astro";
// Icons
import User from "../../components/lib/icons/User.astro";
---

<BaseLayout>
    <section>
        <Wrapper variant="standard" class="pb-8 pt-24">
            <Text
                    tag="h1"
                    variant="textSM"
                    class="font-medium text-base-900 dark:text-white"
            >
                Buttons
            </Text>
            <div class="flex flex-col py-8 mt-8 gap-12 border-t border-base-300 dark:border-base-600">
                <!-- Default -->
                <div class="grid grid-cols-2 md:grid-cols-2 gap-8">
                    <div class="w-full">
                        <Text tag="p" variant="textSM" class="font-medium uppercase text-base-900 dark:text-white">
                            Default text
                        </Text>
                        <div class="flex flex-col mt-4 gap-4">
                            <Button size="xxs" variant="default">Default XXS</Button>
                            <Button size="xs" variant="default">Default XS</Button>
                            <Button size="sm" variant="default">Default SM</Button>
                            <Button size="base" variant="default">Default Base</Button>
                            <Button size="lg" variant="default">Default LG</Button>
                            <Button size="xl" variant="default">Default XL</Button>
                        </div>
                    </div>
                    <div>
                        <Text tag="p" variant="textSM" class="font-medium uppercase text-base-900 dark:text-white">
                            Icon
                        </Text>
                        <div class="flex flex-col mt-4 gap-4">

                            <Button isLink={true} href="#href" size="xxs" variant="default" iconOnly>
                                <User slot="icon" size="xs"/>
                            </Button>

                            <Button isLink={true} href="#href" size="xs" variant="default" iconOnly>
                                <User slot="icon" size="xs"/>
                            </Button>

                            <Button isLink={true} href="#href" size="sm" variant="default" iconOnly>
                                <User slot="icon" size="sm"/>
                            </Button>

                            <Button isLink={true} href="#href" size="base" variant="default" iconOnly>
                                <User slot="icon" size="base"/>
                            </Button>

                            <Button isLink={true} href="#href" size="lg" variant="default" iconOnly>
                                <User slot="icon" size="lg"/>
                            </Button>

                            <Button isLink={true} href="#href" size="xl" variant="default" iconOnly>
                                <User slot="icon" size="xl"/>
                            </Button>
                        </div>
                    </div>
                </div>
                <!-- Primary -->
                <div class="grid grid-cols-2 md:grid-cols-2 gap-8">
                    <div class="w-full">
                        <Text tag="p" variant="textSM" class="font-medium uppercase text-base-900 dark:text-white">
                            Primary text
                        </Text>
                        <div class="flex flex-col mt-4 gap-4">
                            <Button size="xxs" variant="primary">Primary XXS</Button>
                            <Button size="xs" variant="primary">Primary XS</Button>
                            <Button size="sm" variant="primary">Primary SM</Button>
                            <Button size="base" variant="primary">Primary Base</Button>
                            <Button size="lg" variant="primary">Primary LG</Button>
                            <Button size="xl" variant="primary">Primary XL</Button>
                        </div>
                    </div>
                    <div>
                        <Text tag="p" variant="textSM" class="font-medium uppercase text-base-900 dark:text-white">
                            Icon
                        </Text>
                        <div class="flex flex-col mt-4 gap-4">

                            <Button isLink={true} href="#href" size="xxs" variant="primary" iconOnly>
                                <User slot="icon" size="xs"/>
                            </Button>

                            <Button isLink={true} href="#href" size="xs" variant="primary" iconOnly>
                                <User slot="icon" size="xs"/>
                            </Button>

                            <Button isLink={true} href="#href" size="sm" variant="primary" iconOnly>
                                <User slot="icon" size="sm"/>
                            </Button>

                            <Button isLink={true} href="#href" size="base" variant="primary" iconOnly>
                                <User slot="icon" size="base"/>
                            </Button>

                            <Button isLink={true} href="#href" size="lg" variant="primary" iconOnly>
