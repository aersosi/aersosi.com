<script is:inline>
  (function () {
    // Bestehendes Theme aus localStorage oder Systempräferenz ermitteln
    const savedTheme = localStorage.getItem("theme");
    const systemPrefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
    const isDark = savedTheme ? savedTheme === "dark" : systemPrefersDark;

    // Theme sofort setzen (FOUC-Vermeidung)
    document.documentElement.classList.toggle("dark", isDark);

    // Funktion zum Umschalten und Speichern
    function updateTheme(enableDark) {
      document.documentElement.classList.toggle("dark", enableDark);
      localStorage.setItem("theme", enableDark ? "dark" : "light");
    }

    // Event Delegation für alle Theme-Toggles
    document.addEventListener("click", (event) => {
      const toggle = event.target.closest("[data-theme-toggle]");
      if (!toggle) return;
      const currentlyDark = document.documentElement.classList.contains("dark");
      updateTheme(!currentlyDark);
    });

    // Keyboard-Shortcut: Shift + Ctrl + D
    document.addEventListener("keydown", (event) => {
      if (event.shiftKey && event.ctrlKey && event.key === "D") {
        const currentlyDark = document.documentElement.classList.contains("dark");
        updateTheme(!currentlyDark);
        event.preventDefault();
      }
    });
  })();
</script>
