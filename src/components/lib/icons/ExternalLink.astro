---
const { size, strokeWidth = "1.75", class: className, ...rest } = Astro.props;
const xs = ["size-4"];
const sm = ["size-4.5"];
const base = ["size-5"];
const lg = ["size-5.5"];
const xl = ["size-6"];
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={[
    "icon",
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "lg" && lg,
    size === "xl" && xl,
    className,
  ]}
  {...rest}
>
  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
  <polyline points="15 3 21 3 21 9"></polyline>
  <line x1="10" y1="14" x2="21" y2="3"></line>
</svg>
