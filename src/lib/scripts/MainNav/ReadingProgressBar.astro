<script>
  import { throttle } from "../throttle";
  import { normalizePath } from "../normalizePath";

  function updateReadingProgress() {
    const progressBar = document.getElementById("readingProgress");
    if (!progressBar) return;

    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const progress = Math.min(Math.max((scrollTop / docHeight) * 100, 0), 100);

    progressBar.style.width = `${progress}%`;
  }

  const excludedPaths = ["/", "/404", "/articles", "/projects", "/articles/", "/projects/"];
  const excludedSubPaths = ["/articles/tags", "/projects/tags"];
  const currentPath = normalizePath(window.location.pathname);

  const isExcluded =
    excludedPaths.includes(currentPath) || excludedSubPaths.some((path) => currentPath.startsWith(path));

  const throttledUpdateProgress = throttle(updateReadingProgress, 25);

  if (!isExcluded) {
    updateReadingProgress();
    window.addEventListener("scroll", throttledUpdateProgress);
    window.addEventListener("resize", throttledUpdateProgress);
  }
</script>
